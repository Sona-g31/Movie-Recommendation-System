<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie Recommendation</title>

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: Arial, sans-serif;
      }

      .navbar-brand img {
        width: 40px;
        height: 40px;
        margin-right: 10px;
      }

      .slider-container {
        margin-top: 60px;
        height: 90vh;
        overflow: hidden;
        position: relative;
      }

      .slider-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: none;
      }

      .slider-container img.active {
        display: block;
      }
      .dashboard {
        width: 20px;
        height: 30px;
        margin-left: 30px;
      }

      .overlay-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        background-color: rgba(0, 0, 0, 0.6);
        padding: 30px;
        border-radius: 10px;
        text-align: center;
        z-index: 2;
      }

      .movie-watch-card .card-img-top {
        height: 100%;
        object-fit: cover;
      }

      .movie-watch-card .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .watch-section h2 {
        font-size: 2rem;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="#">
          <img src="logo.jpg" alt="Logo" />
          Movie Recommendation

          <div class="dashboard">
            <img src="dashboard.jpg" alt="dashboard" href="/dashboard" />
          </div>
        </a>

        <form class="d-flex ms-auto me-3">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search movies"
            aria-label="Search"
          />
        </form>
        <a class="btn btn-outline-light" href="/login">Login</a>
      </div>
    </nav>

    <!-- Slider -->
    <div class="slider-container">
      <img src="slider1.jpg" class="active" alt="Slide 1" />
      <img src="slider2.jpg" alt="Slide 2" />
      <img src="slider3.jpg" alt="Slide 3" />
      <div class="overlay-text">
        <h1>Let's Watch the Best Movies</h1>
        <p>The best social network just got even better.</p>
      </div>
    </div>

    <!-- Movies to Watch Section -->
    <section class="container my-5 watch-section">
      <h2 class="text-center mb-5">Latest Release Movies</h2>
      <div class="row g-4">
        <!-- Movie Card 1 -->
        <div class="col-sm-6 col-md-4 col-lg-3 movie-watch-card">
          <div class="card shadow-lg h-100">
            <img src="watch1.jpg" class="card-img-top" alt="Housefull 5" />
            <div class="card-body">
              <h5 class="card-title">Housefull 5</h5>
              <p class="card-text"></p>
              <a href="#" class="btn btn-primary w-100 mt-auto">Watch Now</a>
            </div>
          </div>
        </div>

        <!-- Movie Card 2 -->
        <div class="col-sm-6 col-md-4 col-lg-3 movie-watch-card">
          <div class="card shadow-lg h-100">
            <img src="watch2.jpg" class="card-img-top" alt="The Dark Knight" />
            <div class="card-body">
              <h5 class="card-title">Harammkhor</h5>
              <p class="card-text"></p>
              <a href="#" class="btn btn-primary w-100 mt-auto">Watch Now</a>
            </div>
          </div>
        </div>

        <!-- Movie Card 3 -->
        <div class="col-sm-6 col-md-4 col-lg-3 movie-watch-card">
          <div class="card shadow-lg h-100">
            <img src="watch3.jpg" class="card-img-top" alt="Interstellar" />
            <div class="card-body">
              <h5 class="card-title">Kesari Chapter 2</h5>
              <p class="card-text"></p>
              <a href="#" class="btn btn-primary w-100 mt-auto">Watch Now</a>
            </div>
          </div>
        </div>

        <!-- Movie Card 4 -->
        <div class="col-sm-6 col-md-4 col-lg-3 movie-watch-card">
          <div class="card shadow-lg h-100">
            <img src="watch4.jpg" class="card-img-top" alt="Avengers Endgame" />
            <div class="card-body">
              <h5 class="card-title">Final Destination Bloodlines</h5>
              <p class="card-text"></p>
              <a href="#" class="btn btn-primary w-100 mt-auto">Watch Now</a>
            </div>
          </div>
        </div>

        <!-- Add more movie cards as needed -->
      </div>
    </section>

    <section class="container my-5 watch-section">
      <h2 class="text-center mb-5">Must watch Movies</h2>
      <div class="row g-4">
        <!-- Movie Card 1 -->
        <div class="col-sm-6 col-md-4 col-lg-3 movie-watch-card">
          <div class="card shadow-lg h-100">
            <img src="mw1.jpg" class="card-img-top" alt="Housefull 5" />
            <div class="card-body">
              <h5 class="card-title">Robot 2.0</h5>
              <p class="card-text"></p>
              <a href="#" class="btn btn-primary w-100 mt-auto">Watch Now</a>
            </div>
          </div>
        </div>

        <!-- Movie Card 2 -->
        <div class="col-sm-6 col-md-4 col-lg-3 movie-watch-card">
          <div class="card shadow-lg h-100">
            <img src="heyjan.jpg" class="card-img-top" alt="The Dark Knight" />
            <div class="card-body">
              <h5 class="card-title">Yeh Jawaani Hai Deewani</h5>
              <p class="card-text"></p>
              <a href="#" class="btn btn-primary w-100 mt-auto">Watch Now</a>
            </div>
          </div>
        </div>

        <!-- Movie Card 3 -->
        <div class="col-sm-6 col-md-4 col-lg-3 movie-watch-card">
          <div class="card shadow-lg h-100">
            <img src="avtar.jpg" class="card-img-top" alt="Interstellar" />
            <div class="card-body">
              <h5 class="card-title">Awatar</h5>
              <p class="card-text"></p>
              <a href="#" class="btn btn-primary w-100 mt-auto">Watch Now</a>
            </div>
          </div>
        </div>

        <!-- Movie Card 4 -->
        <div class="col-sm-6 col-md-4 col-lg-3 movie-watch-card">
          <div class="card shadow-lg h-100">
            <img
              src="Shankar.jpg"
              class="card-img-top"
              alt="Avengers Endgame"
            />
            <div class="card-body">
              <h5 class="card-title">Luv You Shankar</h5>
              <p class="card-text"></p>
              <a href="#" class="btn btn-primary w-100 mt-auto">Watch Now</a>
            </div>
          </div>
        </div>

        <!-- Add more movie cards as needed -->
      </div>
    </section>

    <!-- Bootstrap JS + Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Slider Script -->
    <script>
      const slides = document.querySelectorAll(".slider-container img");
      let index = 0;
      setInterval(() => {
        slides[index].classList.remove("active");
        index = (index + 1) % slides.length;
        slides[index].classList.add("active");
      }, 4000);
    </script>
  </body>
</html>
